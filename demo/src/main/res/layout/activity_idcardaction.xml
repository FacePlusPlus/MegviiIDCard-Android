<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_rootRel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEF3FA" >

    <include
        android:id="@+id/idcardAction_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/title_layout" />

    <com.megvii.faceppidcardui.view.AutoRatioImageview
        android:id="@+id/idcardAction_logo"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idcardAction_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dip"
        android:scaleType="centerCrop"
        android:src="@drawable/idcard_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idcardAction_logo"
        android:layout_marginTop="30dip"
        android:orientation="vertical"
        android:paddingLeft="35dip"
        android:paddingRight="35dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <include
                    android:id="@+id/idcardAction_imageitem_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/image_item" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <include
                    android:id="@+id/idcardAction_imageitem_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    layout="@layout/image_item" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <include
                    android:id="@+id/idcardAction_imageitem_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    layout="@layout/image_item" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="15dip"
            android:layout_marginTop="15dip"
            android:background="#D0D0D0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <include
                    android:id="@+id/idcardAction_edititem_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/edit_item"
                    android:clickable="true"
                    android:focusable="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <include
                    android:id="@+id/idcardAction_edititem_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    layout="@layout/edit_item"
                    android:clickable="true"
                    android:focusable="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <include
                    android:id="@+id/idcardAction_edititem_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    layout="@layout/edit_item"
                    android:clickable="true"
                    android:focusable="true" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="15dip"
            android:background="#D0D0D0" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dip"
            android:gravity="center" >

            <include
                android:id="@+id/idcardAction_imageitem_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                layout="@layout/image_item" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/idcardAction_enterBtn"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dip"
        android:layout_marginLeft="35dip"
        android:layout_marginRight="35dip"
        android:background="@drawable/bg_buttongreen_select"
        android:text="检测身份证"
        android:textColor="#ffffffff"
        android:textSize="22sp"
        android:visibility="visible" />

    <include
        android:layout_width="wrap_content"
        android:layout_height="35dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        layout="@layout/power_layout"
        android:visibility="visible" />

</RelativeLayout>